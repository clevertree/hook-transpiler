{
  "name": "@clevertree/hook-transpiler",
  "version": "1.3.1",
  "description": "Minimal JSX/TSX transpiler for Relay hooks on web and Android (QuickJS/JNI)",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "android": "./dist/index.android.js",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "wasm"
  ],
  "scripts": {
    "build": "tsc && npm run build:wasm",
    "build:wasm": "wasm-pack build --release --target web --features wasm && mkdir -p wasm && cp pkg/relay_hook_transpiler* wasm/",
    "test": "npm run build && node --test dist/selfCheck.test.js"
  },
  "devDependencies": {
    "typescript": "^5.0.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "express": "^4.18.2"
  },
  "dependencies": {
    "markdown-to-jsx": "^9.3.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  }
}